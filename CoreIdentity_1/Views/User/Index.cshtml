@model List<AppUser>


    <a asp-action="Create" asp-controller="User">Yeni kullanıcı ekle</a>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Kullanıcı ismi</th>
                <th>Email Adresi</th>
                <th>Rolü</th>
                <th>Rol Ata</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AppUser item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td><getUserInfo user-id="item.Id"></getUserInfo></td>
                <td><a asp-action="AssignRole" asp-controller="User" asp-route-id="@item.Id" class="btn btn-primary">Rol Ata</a></td>
            </tr>
        }
        </tbody>
    </table>